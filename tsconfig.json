{
   "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "paths": {
         "*": ["node_modules/*", "src/types/*"]
      }
   },
   "include": ["src"],
   "exclude": ["node_modules", "dist"]
}
